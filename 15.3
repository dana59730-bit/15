interface Actions1
{
    void Price();
    int GetPrice();
}
interface Actions2
{
    void Warranty_period();
}
public class Phone : Actions1, Actions2
{
    private int price;
    private int warranty;
    public Phone(int price, int warranty)
    {
        this.price = price;
        this.warranty = warranty;
    }
    public void Price()
    {
        if (price < 0)
        {
            Console.WriteLine("Ошибка");
        }

    }
    public int GetPrice()
    {
        return price;
    }
    public void Warranty_period()
    {
        if (warranty != 0)
        {
            Console.WriteLine($"У вас есть гарантия она длиться {warranty} года");
        }
        else
        {
            Console.WriteLine("У вас нет гарантии");
        }
    }
}
public class Laptop : Actions1
{
    private int price;
    public Laptop(int prise)
    {
        this.price = prise;
    }
    public void Price()
    {
        if (price < 0)
        {
            Console.WriteLine("Ошибка");
        }

    }
    public int GetPrice()
    {
        return price;
    }
}
class Program
{
    static void Main(string[] args)
    {
        Actions1[] actions1s1 = { new Phone(10000, 3), new Laptop(20000) };
        int result = 0;
        foreach (Actions1 action1 in actions1s1)
        {
            action1.Price();
            result += action1.GetPrice();
        }
        Console.WriteLine($"общая стоимость {result}");
        Actions2[] actions2s2 = { new Phone(10000, 3) };
        foreach (Actions2 action2 in actions2s2)
        {
            action2.Warranty_period();
        }
        Console.ReadLine();
    }
}
